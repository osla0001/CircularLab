      <figure>
        <img src="../../../public/biodegradable.svg" alt="" />
      </figure>
      <figure>
        <img src="../../../public/low_carbon_footprint.svg" alt="" />
      </figure>
      <figure>
        <img src="../../../public/recycled_contet.svg" alt="" />
      </figure>
      <figure>
        <img src="../../../public/lightweight.svg" alt="" />
