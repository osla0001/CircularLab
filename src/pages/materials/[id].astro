  </article>

  <Footer notopmargin=`notopmargin` />
</Layout>
<style>
  img.materialimg {
    height: 100vh;
    width: auto !important;
  }

  article.materialsection {
    display: flex;
    flex-direction: row;
  }

  span.materialnumb {
    font-size: 90%;
    font-weight: 500;
  }
  footer {
    margin-top: 0 !important;
  }
  .margin {
    height: 500px;
  }
  .materialcontent {
    margin: 2vw;
    width: 60vw;
  }
  section.breadcrumb {
    display: flex;
    flex-direction: row;
    gap: 10px;
